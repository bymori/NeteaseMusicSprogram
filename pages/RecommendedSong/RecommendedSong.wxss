.recommendSongContainer .header{
    position: relative;
    width: 100%;
    height: 300rpx;
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}

.recommendSongContainer .header .date{
    position: absolute;
    left: 50%;
    top: 50%;
    /* margin-left: -150rpx;
    margin-top: -50rpx; */
    transform: translate(-50%,-50%);
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.header .date .day{
    font-size: 38rpx;
}


/* 列表区域 */

.ListconTainer{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}
.listHeard{
    height: 80rpx;
    line-height: 80rpx;
}
.listHeard .changeMore{
    float: right;
}

/* 内容区域 */
.listScroll{
    height: calc(100vh - 380rpx);
}
.scrollItem{
    position: relative;
    display: flex;
    /* justify-content: space-between; */ /* 两端布局 */
}

.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    
}
.musicInfo .musicName{
    font-weight:bold;
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 450rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
    /* 更多 图标位置  left center right */
}